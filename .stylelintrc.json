{
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
            "ignoreAtRules": [
                "tailwind",
                "apply",
                "variants",
                "responsive",
                "screen"
            ]
            }
        ],
        "no-empty-source": null,
        "block-no-empty": null,
        "unit-whitelist": ["em", "rem", "%", "s"]
    }
  }
